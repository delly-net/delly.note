@page
@using DellyNote.Razor.Pages
@model MdEditModel

@{
    Layout = null;
    // 语言包
    var lpm = Model.Lpm;
    // 获取标题
    var title = $"{ViewData["title"]?.ToString()} - {lpm.DellyNote}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="icon" href="~/delly_256.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mdedit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/editormd.css" />
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/editormd.min.js"></script>
    <script type="text/javascript" src="~/js/mdedit.js" asp-append-version="true"></script>
</head>
<body class="edit-body">
    <!-- 头部 -->
    <header class="edit-header">
        <nav class="nav-container">
            <div class="nav-left">
                <!-- logo -->
                <a href="/" class="logo-link"><img alt="@lpm.DellyNote" title="@lpm.DellyNote" src="~/image/delly1_256.png" /></a>
                <h1>@lpm.DellyNote</h1>
            </div>
            <div class="nav-right">
                <a id="lnkSave" href="javascript:;" class="success">@lpm.Save</a>
                @* <a href="/Login" class="success">@lpm.Login</a> *@
            </div>
        </nav>
    </header>
    <section class="edit-title">
        <input id="txtTitle" type="text" name="title" placeholder="@lpm.PleaseInputTitle" value="@Model.Note?.Title" />
    </section>
    <section class="edit-container">
        <div id="editormd"></div>
    </section>
    <section class="text-container">
        <textarea id="textmd"></textarea>
    </section>
    <script type="text/javascript">
        let id=`@Model.Note?.Id`;
        let isComposing = false;
        const md=`@Html.Raw(Model.Note?.EditContent?.Replace("`", "\\`"))`;
        const args={
            width: "100%",
            height: "100%",
            syncScrolling : "single",
            path    : "../lib/",
            markdown : md,
            saveHTMLToTextarea : true,
            codeFold : true,
            lineWrapping: false, // 禁用自动换行
            watch: false, // 暂时关闭实时预览（避免频繁渲染）
            imageUpload : true,
            imageFormats : ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
            imageUploadURL : "/app/delly/FileStorage/Upload",
            onload: function () {
                // console.log("editormd.onload",this);
                var cm = this.codeMirror; // CodeMirror 实例
                var textarea=this.codeEditor.getTextArea();
                // console.log("editormd.textarea",textarea);
                var editor = this;

                // 关闭预览
                // editor.unwatch();

                // 标记输入法开始/结束
                // textarea.addEventListener('compositionstart', () => {
                //   isComposing = true;
                // });
                // textarea.addEventListener('compositionend', () => {
                //   isComposing = false;
                // });

                // 重写输入事件，仅在输入法结束后处理
                // textarea.addEventListener('input', (e) => {
                //   if (isComposing) return;

                //   实时过滤异常换行
                //   const content = e.target.value;
                //   移除由空格/标点触发的多余换行
                //   const cleaned = content.replace(/([\s，。；：！？])\n/g, '$1');
                //   if (cleaned !== content) {
                //     e.target.value = cleaned;
                //     触发编辑器同步
                //     e.target.dispatchEvent(new Event('change'));
                //   }
                // });

                // 监听粘贴事件
                cm.on("paste", function (evt, e) {
                    // console.log("editormd.paste",evt,e,window.clipboardData);
                    var items = (evt.originalEvent.clipboardData || e?.clipboardData || window.clipboardData).items;
                    for (var i = 0; i < items.length; i++) {
                        if (items[i].kind === "file" && items[i].type.indexOf("image/") !== -1) {
                            var file = items[i].getAsFile();
                            if (file) {
                                uploadImg(file, editor); // 调用上传函数
                                e?.preventDefault(); // 阻止默认粘贴行为
                            }
                        }
                    }
                });
            }
        };

        // 图片上传函数
        function uploadImg(file, editor) {
            var formData = new FormData();
            formData.append("editormd-image-file", file); // 与后端参数名一致

            fetch(editor.settings.imageUploadURL, {
                method: "POST",
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    var imgUrl = data.url;
                    // 插入 Markdown 图片语法
                    editor.insertValue(`![${imgUrl}](${imgUrl})`);
                } else {
                    alert("上传失败: " + data.message);
                }
            })
            .catch(err => {
                console.error("上传错误:", err);
                alert("上传失败，请重试");
            });
        }

        $(function(){
            const editor = editormd("editormd", args);
            $("#textmd").change(()=>{
                console.log("textmd.keyup",$("#textmd").val());
                editor.setValue($("#textmd").val());
                editor.previewing();
            }).val(md);
            $("#lnkSave").bind('click', ()=>{
                setTimeout(()=>{
                    ctx.save({
                        id:id,
                        title: $("#txtTitle").val(),
                        noteType: "MD",
                        editContent: editor.getMarkdown(),
                        renderHtml: editor.getHTML(),
                    }).then(data=>{ id=data.id; });
                },100);
            });
        });
    </script>
</body>
</html>
